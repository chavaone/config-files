;Arquivo de configuración de git.
;
;Cores sacados de: 
;	* http://dropshado.ws/post/7844857440/gitconfig-colors
;Alguns alias sacados de:
;	* http://code.joejag.com/2013/everyday-git-aliases/


[user]
	name = Marcos Chavarría Teijeiro
	email = chavarria1991@gmail.com
	editor = vim

[alias]
	st = status -bs
	lg = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	ca = commit -a
	pom = push origin master

[core]
	quotepath = false
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[color]
	ui = true

[color "branch"]
	current = yellow black
	local = yellow
	remote = magenta

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red reverse
	new = green reverse
	whitespace = white reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan reverse
	branch = magenta
